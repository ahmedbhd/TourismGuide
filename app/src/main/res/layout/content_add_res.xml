<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".AddResActivity"
    tools:showIn="@layout/activity_add_res">


    <ImageView
        android:id="@+id/addLocImage"
        android:layout_width="375dp"
        android:layout_height="176dp"
        android:scaleType="fitXY"

        android:clickable="true"
        android:focusable="true"
        android:src="@drawable/restaurantimg"
        app:layout_constraintBottom_toTopOf="@+id/addname"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/restaurantimg" />

    <EditText
        android:id="@+id/addname"
        android:layout_width="212dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="2dp"
        android:gravity="center_vertical|center"
        android:hint="Name"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/addtlf"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/addLocImage"
        tools:fontFamily="casual" />

    <EditText
        android:id="@+id/addtlf"
        android:layout_width="212dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="2dp"
        android:gravity="center_vertical|center"
        android:hint="Phone"
        android:inputType="phone"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/addDesc"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/addname"
        tools:fontFamily="casual" />

    <MultiAutoCompleteTextView
        android:id="@+id/addDesc"
        android:layout_width="242dp"
        android:layout_height="60dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="2dp"
        android:ems="10"
        android:fontFamily="monospace"
        android:hint="Description..."
        android:inputType="textMultiLine"
        android:maxLines="2"
        android:textAlignment="center"
        android:textSize="12sp"
        app:layout_constraintBottom_toTopOf="@+id/relativeLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/addtlf"
        tools:ignore="MissingConstraints" />

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="291dp"
        android:layout_height="134dp"
        android:layout_marginTop="2dp"
        android:gravity="bottom|center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/addDesc">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true">


            <ImageView
                android:id="@+id/imgadddiag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"

                android:clickable="true"
                android:longClickable="true"
                app:srcCompat="@drawable/mapsicon" />
        </FrameLayout>


        <android.support.design.widget.FloatingActionButton
            android:id="@+id/addSave"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="0dp"
            android:gravity="bottom|center"
            app:backgroundTint="@android:color/holo_red_dark"
            app:srcCompat="@drawable/ic_add_circle_outline_red_50_24dp"
            tools:layout_editor_absoluteX="172dp"
            tools:layout_editor_absoluteY="478dp" />
    </RelativeLayout>

</android.support.constraint.ConstraintLayout>